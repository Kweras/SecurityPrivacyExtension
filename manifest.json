{
  "manifest_version": 2,
  "name": "Security and Privacy Extension",
  "version": "2.1.3.7",
  "description": "Development of a browser plug-in where the plug-in alerts the user e.g. about online tracking.",
  "permissions": [
    "cookies", "contentSettings", "webRequest", "webRequestBlocking", "tabs", "http://*/*", "https://*/"
  ],
  "background": {
    "scripts": ["background.js"]
    },
  "browser_action": {
    "default_popup": "popup.html",
  "default_icon": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
